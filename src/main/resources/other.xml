<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="event" class="com.logging.Event" scope="prototype">
        <constructor-arg index="0" >
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg index="1" >
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="file" class="java.io.File">
        <constructor-arg type="java.lang.String" value="logs/mala.log"/>
    </bean>

    <bean id="beanAware" class="com.utils.BeanAware" init-method="init"/>
    <bean id="monitor" class="com.utils.Monitor"/>
</beans>