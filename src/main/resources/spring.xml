<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <import resource="logger.xml"/>
    <import resource="other.xml"/>

    <bean id="client" class="com.Client">
        <property name="objectId" value="1"/>
        <property name="name" value="John Smith"/>
        <property name="greetings" value="hello there"/>
    </bean>

    <bean id="application" class="com.Application">
        <constructor-arg index="0" ref="client"/>
        <constructor-arg index="1">
            <map>
                <entry key="INFO" value-ref="consoleEventLogger"/>
                <entry key="ERROR" value-ref="combinedEventLogger"/>
            </map>
        </constructor-arg>
        <constructor-arg index="2" ref="cacheFileEventLogger"/>
    </bean>
</beans>