<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.Client">
        <property name="objectId" value="1"/>
        <property name="name" value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="com.logging.impl.ConsoleEventLogger" />

    <bean id="application" class="com.Application">
        <constructor-arg index="0" ref="client"/>
        <constructor-arg index="1" ref="eventLogger"/>
    </bean>
    
    <bean id="event" class="com.logging.Event" scope="prototype">
        <constructor-arg index="0" >
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg index="1" >
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>


</beans>